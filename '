alias clean='rm -rf build dist .mypy_cache .pytest_cache .tox .ruff_cache .coverage && find . -type f- name ".pyc" | xargs rm && find . -type d -name "__pycache__" -exec rm -r {} + && rm-rf *.egg-info'

